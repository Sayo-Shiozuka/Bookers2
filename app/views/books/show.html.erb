<body>
  <p id="notice">
    <%= notice %>
  </p>
  <h1>User info</h1>
  <p>name</p>
  <p>introduction</p>
  <%= link_to "edit", edit_user_path(current_user) %>

<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>

  <h1>Book detail</h1>

  <table>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>user-image</td>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
          <% if @book.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</body>
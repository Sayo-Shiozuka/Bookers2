
<h1>User info</h1>

  <p>name</p>

  <p>introduction</p>

  <%= link_to "edit", edit_user_path(current_user.id) %>


<h1>New Book</h1>
<%= form_with model: @book, url: books_path, local: true do |f| %>
  <h4>title</h4>
  <%= f.text_area :title %>
  <h4>opinion</h4>
  <%= f.text_area :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>

    <% @users.each do |user| %>
      <tr>
        <td>user-image</td>
        <td><%= user.name %></td>
        <td><%= link_to "show", user_path(current_user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

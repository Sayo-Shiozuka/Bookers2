<% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= link_to user_path(book_comment.user.id), method: :get do %>
        <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %> <br>
        <%= book_comment.user.name %>
      <% end %>
    </td>
    <td><%= book_comment.comment %></td>
    <td>
      <% if current_user == book_comment.user %>
        <%= link_to book_book_comment_path(book_comment.book_id,book_comment.id), class:"btn btn-sm btn-danger", method: :delete, remote: true do %>
          Destroy
        <% end %>
      <% end %>
    </td>
  </tr>
<% end %>